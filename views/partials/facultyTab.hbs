<div class="container">
  <div class="row row-cols-1 row-cols-md-2">
    {{#each faculty}}
      <div class="col mb-4">
        <div class="card h-100">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img src="{{imageUrl}}" alt="faculty image" class="card-img">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <a href="{{profileUrl}}"><h5 class="card-title">{{name}}</h5></a>
                <p class="card-text lead">{{titles}}</p>
                <ul class="card-text">
                  <li>Phone: {{phone}}</li>
                  <li>Email: <a href="mailto:{{email}}" target="_blank">{{email}}</a></li>
                  <li>Office: {{office}}</li>
                </ul>
              </div>
            </div>
          </div>

        </div>
      </div>
    {{/each}}
  </div>
</div>
