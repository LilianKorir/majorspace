{{!--message--}}
<div class="container">
<form action="/spaces/{{department.name}}/messages" method="POST" id="new-message-form">
<h4 class=" text-center">New Message</h4>

<div class="form-group">

  <div class="form-group">
    <label for="message-subject-input">Subject</label>
    <input type="text" name="subject" id="message-subject-input" placeholder="Subject" required>
  </div>
  <div class="form-group">
    <div class="form-row">
      <div class="col">
      <label for="message-input">Message</label>
      <textarea class="form-control" name="messageBody" id="message-input" cols="30" rows="5" required></textarea>
      </div>
    </div>
  </div>
</div>
<input type="submit" class="btn btn-primary btn-large" value="Submit">
</form>
</div>
